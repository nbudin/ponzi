<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" 
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html>
<head>
  <title>Ponzi</title>
  <meta http-equiv="Content-Type" content="text/html;charset=utf-8"/>
  <%= javascript_include_tag :defaults %>
  <%= stylesheet_link_tag 'ponzi' %>
  <% if @rss_url %>
    <link rel="alternate" title="RSS Feed" href="<%=@rss_url%>" type="application/rss+xml"/>
  <% end %>
</head>
<body id="body">

<% for name in [:notice, :warning, :message] %>
	<% if flash[name] %>
		<%= "<div id=\"#{name}\">#{flash[name]}</div>" %>
	<% end %>
<% end %>

<div id="sidebar">
    <h1><%= link_to "Ponzi", :controller => "main", :action => "index" %></h1>
    <div id="authbox">
      <% if logged_in? -%>
          <%= link_to image_tag('user.png'),
    		:controller => 'account', :action => 'edit_profile' %>
          <%= link_to  logged_in_person.name, 
    		:controller => 'account', :action => 'edit_profile' %>
          <br/>
          <%= link_to "Log out", :controller => 'auth', :action => 'logout' %>
      <% else -%>
          <%= link_to "Log in", :controller => 'auth', :action => 'login' %>
      <% end -%>
    </div>
    
    <% if logged_in? -%>
        <div id="chorebox">
            <h2>Chores</h2>
            <ul>
                <% @current_chores.each do |chore| %>
                    <li>
                        <b><%= chore.name%></b>
                        <%= frequencyize chore.frequency_amount %> a
                        <%= chore.frequency_unit %>
                    </li>
                <% end -%>
            </ul>
        </div>
        <div id="financebox">
            <h2>Finance</h2>
            <b>Balance:</b> <%= display_balance app_profile.balance %>
        </div>
    <% end -%>
</div>

<% if flash[:error_messages] -%>
	<ul id="errors">
		<li><%= flash[:error_messages] %></li>
	</ul>
<% end %>

<div style="clear: both;"></div>

<%= @content_for_layout %>

</body>
</html>
